<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/userList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/homePage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <!--For Question Answer-->
    <servlet>
        <servlet-name>qa</servlet-name>
        <servlet-class>controller.QuestionAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>qa</servlet-name>
        <url-pattern>/qa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>qa</servlet-name>
        <url-pattern>/qaUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>qa</servlet-name>
        <url-pattern>/qaAdd</url-pattern>
    </servlet-mapping>
<!--For Quiz-->
    <servlet>
        <servlet-name>playQuiz</servlet-name>
        <servlet-class>controller.QuizServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>playQuiz</servlet-name>
        <url-pattern>/playquiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>playQuiz</servlet-name>
        <url-pattern>/userhome</url-pattern>
    </servlet-mapping>





</web-app>